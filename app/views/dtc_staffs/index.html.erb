
  <div class="row">
        
    <div class="span12">          
          
          <div class="widget stacked ">
            
            <div class="widget-header">
              <i class="icon-pencil"></i>
              <h3>Listing SubCluster Staffs</h3>
          </div> <!-- /widget-header -->
        
             <div class="widget-content">
<table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered table-highlight">
<thead>
    <tr>
      <th>Sr. No.</th>
      <th>Cluster</th>
      <th>Sub Cluster</th>
      <th>Reader</th>
      <th colspan=2>Actions</th>
      
    </tr>
</thead>
    <% @dtc_staffs.each.with_index(1) do |dtc_staff,index| %>
      <tr>
        <td><%= index %></td>
        <td><%= dtc_staff.cluster_id %></td>
        <td><%= dtc_staff.sub_cluster %></td>
        <td><%= User.find(dtc_staff.user_id).first_name  rescue nil %></td>
         <% if can? :update, dtc_staff %>
        <td><%= link_to 'Edit', edit_dtc_staff_path(dtc_staff) ,:class => "btn" %></td>
        <% end %>
        <td><%= link_to 'Destroy', dtc_staff, method: :delete, data: { confirm: 'Are you sure?' } ,:class => "btn"%></td>
      </tr>
    <% end %>
</table>

<br>

<%= link_to 'Assign Sub Cluster', new_dtc_staff_path, :class => "btn btn-secondary" %>
</div>  
</div>
</div>
</div>
