  <div class="row">
        
    <div class="span12">          
          
          <div class="widget stacked ">
            
            <div class="widget-header">
              <i class="icon-pencil"></i>
              <h3>Listing Meter Reader Statuses</h3>
          </div> <!-- /widget-header -->
        
             <div class="widget-content">


<table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered table-highlight">
  <thead>
    <tr>
      <th>Sr. No.</th>
      <th>Description</th>
      <th colspan = 2>Action</th>
      </tr>
  </thead>

  <tbody>
    <% @meter_reader_statuses.each.with_index(1) do |meter_reader_status,index| %>
      <tr>
        <td><%= index %></td>
        <td><%= meter_reader_status.description %></td>
        <td><%= link_to 'Edit', edit_meter_reader_status_path(meter_reader_status) ,:class=>"btn" %></td>
        <td><%= link_to 'Delete', meter_reader_status, method: :delete, data: { confirm: 'Are you sure?' },:class=>"btn" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Meter reader status', new_meter_reader_status_path,:class =>"btn btn-secondary" %>
</div>  
</div>
</div>
</div>
