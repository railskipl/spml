<h1 align="center">Listing meter statuses</h1>

<table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Billing meter status</th>
      <th colspan = 3>Action</th>
      </tr>
  </thead>

  <tbody>
    <% @meter_statuses.each do |meter_status| %>
      <tr>
        <td><%= meter_status.billing_meter_status %></td>
        <td><%= link_to 'Show', meter_status %></td>
        <td><%= link_to 'Edit', edit_meter_status_path(meter_status) %></td>
        <td><%= link_to 'Destroy', meter_status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

