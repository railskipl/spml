                        <td><%= reading.longitude rescue nil%></td>
                        <td><%= reading.created_at.strftime("%T %a %b %e %Y ")%></td>
                        <td><%= image_tag reading.image.url ,:class => "img1" %></td>
                        <td><%= link_to 'Show', reading ,:class =>"btn btn-primary"%></td>
                      </tr>
                  <% end %>
                  
                   </tbody>
            </table>
                  

            
            
                  
          </section>
                



<% end %>


        
        </div> <!-- /widget-content -->
          
      </div> <!-- /widget -->
          
      </div>
        
      </div> <!-- /row -->
