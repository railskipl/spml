                        <th>Reader</th>
                        <th>Team</th>
                        <th>Meter Reading</th>
                        <th>Dtc</th>
                        <th>Meter Status</th>
                        <th>Meter Reader Status</th>
                        <th>Latitude</th>
                        <th>Longitude</th>
                        <th>Date Time</th>
                        <th>Image</th>
                        <th>Action</th>
                      </tr>
                    </thead>
                    <tbody>

                  <%  @readings_status.each do |reading| %>  
                      <tr>
                        <td><%= reading.consumer_no rescue nil%></td>
                        <td><%= reading.read_by rescue nil%></td>
