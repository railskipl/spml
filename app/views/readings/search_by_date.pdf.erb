<% if @readings.empty? %>
No results found!
<% else %>
          <div class="row-fluid">
          <div class="span6">
          <h3>Consumers Readings</h3>
          </div>
  
          
          
          </div>
<table cellpadding="10" cellspacing="0" border="1" class="table table-striped table-bordered">
  <thead>
       <tr>
      <th>Sr. No.</th>
      <th>Consumer number</th>
      <th>Reader</th>
      <th>Remarks</th>
      <th>Meter No</th>
      <th>New Meter No</th>
      <th>Meter Reading</th>
      <th>Sub Cluster</th>
      <th>Meter Status</th>
      <th>Meter Reader Status</th>
      <th>Date Time</th>
      <th>Image</th>
    </tr>
  </thead>
    <%  @readings.each.with_index(1).each do |reading,index| %>
      <tr>
        <td><%= index %></td>
        <td><%= reading.consumer_no rescue nil%>&nbsp;</td>
        <td><%= reading.user.first_name rescue nil%>&nbsp;</td>
        <td><%= reading.remark rescue nil %></td>
        <td><%= reading.old_meter_no rescue nil %></td>
        <td><%= reading.new_meter_no rescue nil %></td>
        <td><%= reading.meter_reading  rescue nil%>&nbsp;</td>
        <td><%= reading.sub_cluster rescue nil%>&nbsp;</td>
        <td><%= reading.meter_status rescue nil%>&nbsp;</td>
        <td><%= reading.meter_reader_status rescue nil%>&nbsp;</td>
        <td><%= reading.created_at.strftime("%T %a %b %e %Y ")%></td>
        <td><%= image_tag reading.image.url ,:width => 250,:height=> 200%></td>
      </tr>
    <% end %>
  
</table>  


<% end %>

