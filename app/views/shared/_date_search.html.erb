<%= form_tag search_by_date_path, :method => 'get' do %>

<table>
  <tr>
    <td>Date From :</td>
    <td><input type="text_field" class="date_time" name="start_date" id="start_date"></td>
    <td> 
    <div class="input-append bootstrap-timepicker">
     <input id="timepicker1" type="text" class="input-small" name="timepicker1">
      <span class="add-on" style="height:16px;">
      <i class="icon-time"></i>
      </span>
    </div>
    </td>
  </tr>
  <tr>
    <td>Date To :</td> 
    <td><input type="text_field" class="date_time1" name="end_date" id="end_date"></td>
    <td> 
    <div class="input-append bootstrap-timepicker" >
     <input id="timepicker2" type="text" class="input-small" name="timepicker2">
      <span class="add-on" style="height:16px;">
      <i class="icon-time"></i>
      </span>
      </div>
    </td>
  </tr>
</table>

<% if params[:action] == 'index' %>
 <%= hidden_field_tag :reading_index , "reading_index"%>
<% elsif params[:action] == 'consumer_status' %>
 <%=  hidden_field_tag :consumer_status ,params["consumer_status"] %>
<% end %>
 <script type="text/javascript">
 jQuery('#timepicker1').timepicker({
minuteStep: 1,
template: 'modal',
appendWidgetTo: 'body',
showSeconds: true,
showMeridian: false,
defaultTime: false
});
jQuery('#timepicker2').timepicker({
minuteStep: 1,
template: 'modal',
appendWidgetTo: 'body',
showSeconds: true,
showMeridian: false,
defaultTime: false
});
</script>

<%= submit_tag "Search by date and time" ,:class =>"btn btn-primary"%>
<% end %>
