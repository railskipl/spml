  <div class="row">
        
    <div class="span12">          
          
          <div class="widget stacked ">
            
            <div class="widget-header">
              <i class="icon-pencil"></i>
              <h3>Import Users</h3>
          </div> <!-- /widget-header -->
        
             <div class="widget-content">

<%= form_tag import_users_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import" ,:class =>"btn btn-primary"%>
<% end %>
<%= form_tag search_users_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search"  ,:class =>"btn btn-primary"%>
  </p>
<% end %>
<p>
<%= link_to "Show Readers", search_users_path(:name => "readers") ,:class =>"btn" %> |
<%= link_to "Show Vendors", search_users_path(:name => "vendors") ,:class =>"btn"%>
</p>
<p><%= link_to "Add Staff", signup_path,:class =>"btn" %></p>

<table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered table-highlight">
<thead>
  <tr>
    <th>Sr. No.</th>
    <th>Full Name</th>
    <th>Username</th>
    <th colspan=2>Actions</th>
  </tr>
</thead>
<% @users.each.with_index(1) do |user,index| %>
  <tr>
    <td><%= index %></td>
    <td><%= user.first_name %> <%= user.last_name %></td>
    <td><%= user.username %></td>
    <td><%= link_to "Edit" , edit_user_path(user) , :class => "btn" %></td>
    <td><%= link_to "Destroy" , user_path(user) ,method: :delete, data: { confirm: 'Are you sure ?' }, :class => "btn" %></td>
  </tr>
<% end %>
</table>


</div>  
</div>
</div>
</div>