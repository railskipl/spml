<% if @users.empty? %>
<p>Sorry! No users there...</p>
<%else %>
   <div class="row-fluid">
          <div class="span6">
          <h3>Staff</h3>
          </div>
<div class="span6" style="text-align:right">
<a href="<%= search_users_path(params.merge(format: "xls")) %>" class="btn btn-secondary"><img src="/assets/excel.png" alt=""> Excel</a> 
</div> 

          
          
          
          </div>
<table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered">
  <thead>
  <tr>
    <th>Full Name</th>
    <th>Username</th>
  </tr>
    </thead>
<% @users.each do |user| %>
  <tr>
    <td><%= user.first_name %> <%= user.last_name %></td>
    <td><%= user.username %></td>
  </tr>
<% end %>
</table>

<%end %>




