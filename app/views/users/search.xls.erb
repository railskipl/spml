<table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered">

  <tr>
    <th>Full Name</th>
    <th>Username</th>
    <th>Role</th>
  </tr>
<% @users.each do |user| %>
  <tr>
    <td><%= user.first_name %> <%= user.last_name %></td>
    <td><%= user.username %></td>
     <td><%= Role.find(user.role_id).name  rescue nil %></td>
  </tr>
<% end %>
</table>
  <%= link_to "Excel", search_users_path(params.merge(format: "xls")) %>